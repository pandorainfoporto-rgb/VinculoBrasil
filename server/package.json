{
  "name": "vinculo-server",
  "version": "2.0.0",
  "description": "Backend server for Vinculo Brasil platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc || exit 0",
    "start": "npx prisma db push --accept-data-loss && node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "deploy:contract": "tsx scripts/deploy-contract.ts",
    "deploy:contract:auto": "tsx scripts/deploy-contract-auto.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.7.9",
    "baileys": "^6.7.9",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.21.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "ethers": "^6.13.4",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "openai": "^4.77.0",
    "pino": "^10.1.0",
    "pino-http": "^10.4.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "uuid": "^11.0.3",
    "zod": "^3.25.50"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^6.4.16",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
