# =============================================================================
# VINCULO.IO - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=https://seu-dominio.com.br

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# Connection string for Prisma
DATABASE_URL=postgresql://vinculo:SUA_SENHA_FORTE@localhost:5432/vinculo
DB_PASSWORD=SUA_SENHA_FORTE

# =============================================================================
# REDIS (Queues & Cache)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=GERE_UMA_CHAVE_SEGURA_COM_64_CARACTERES_AQUI
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=GERE_UMA_CHAVE_DE_32_CARACTERES

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Active Network: "polygon" (mainnet) or "polygonMumbai" (testnet)
VITE_BLOCKCHAIN_NETWORK=polygonMumbai

# RPC URLs (use your own Infura/Alchemy endpoints for production)
POLYGON_RPC_URL=https://polygon-rpc.com
VITE_POLYGON_RPC_URL=https://polygon-rpc.com
VITE_POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Admin Wallet (Custodian) - Private Key for NFT Minting
# IMPORTANT: Use a dedicated wallet, NOT your personal wallet!
# Generate wallet: https://vanity-eth.tk/ or Metamask
# Fund with POL tokens for gas fees
ADMIN_PRIVATE_KEY=0x_SUA_CHAVE_PRIVADA_DO_ADMIN_WALLET

# Legacy Operator Private Key (NEVER share!)
# Generate wallet: https://vanity-eth.tk/
OPERATOR_PRIVATE_KEY=0x_SUA_CHAVE_PRIVADA_DE_64_CARACTERES

# Treasury Wallet (receives platform profits)
TREASURY_WALLET=0x_ENDERECO_DA_WALLET_TREASURY
VITE_PLATFORM_WALLET=0x0000000000000000000000000000000000000001
VITE_INSURANCE_WALLET=0x0000000000000000000000000000000000000002

# Smart Contract Addresses (after deployment)
VITE_SMART_CONTRACT_ADDRESS=0x6748Cf729dc62bef157b40ABBd44365c2f12702a
VITE_VINCULO_CONTRACT_ADDRESS=0x1234567890AbCdEf1234567890AbCdEf12345678
NFT_CONTRACT_ADDRESS=0x_ENDERECO_DO_CONTRATO_NFT
VBRZ_TOKEN_ADDRESS=0x_ENDERECO_DO_TOKEN_VBRZ

# --- CARTEIRAS OPERACIONAIS DO ECOSSISTEMA ---
# Treasury Wallet (Tesouraria Principal)
VITE_TREASURY_WALLET=0xCbD93BcDff0Eb3B215163Afe004A13afa0bF7261

# Cashback Wallet (Pool de Cashback)
VITE_CASHBACK_WALLET=0x0Ff33EF655C8c9A7d2c3c7aA2D47097Dae8dbCb3

# Marketing Wallet (Campanhas e Parcerias)
VITE_MARKETING_WALLET=0x7a9Cae36791F855f1eEa69109a4713890d8f9303

# Team Leader Wallet (Equipe Fundadora)
VITE_TEAM_LEADER_WALLET=0x69241AAaDb6f2C6f8f518D3ECB7955D9849eD22B

# VBRz Token Contract Address
VITE_VBRZ_CONTRACT=0x_ENDERECO_DO_CONTRATO_VBRZ

# Vesting Contract Address
VITE_VESTING_CONTRACT=0x_ENDERECO_DO_CONTRATO_VESTING

# BRZ Token Address (Brazilian Digital Token - BRL stablecoin)
VITE_BRZ_TOKEN_ADDRESS=0x4eD141110F6EEeaba9A1df36d8c26f684d2475Dc

# Chainlink BRL/USD Oracle
VITE_CHAINLINK_BRL_USD_ORACLE=0x12162c3E810393dEC01F3E1A2Bbb9cFB3E0C6c60

# Alchemy/Infura API Keys (recommended for production)
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here
VITE_INFURA_PROJECT_ID=your_infura_project_id_here

# WalletConnect Project ID (required for WalletConnect integration)
# Get yours at: https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Webhook secret for blockchain events
BLOCKCHAIN_WEBHOOK_SECRET=SEU_SECRET_PARA_WEBHOOKS

# =============================================================================
# ASAAS (PIX/Boleto Payments)
# =============================================================================
# Get at: https://www.asaas.com/
ASAAS_API_KEY=sua_api_key_do_asaas
ASAAS_WALLET_ID=seu_wallet_id
ASAAS_SANDBOX=true

# =============================================================================
# ORACLE SERVICE (Backend - Railway)
# =============================================================================
# NUNCA exponha a chave privada no frontend!
# Estas variaveis sao apenas para o backend (Railway)
# ORACLE_PRIVATE_KEY=0x_SUA_CHAVE_PRIVADA_DO_ORACLE
# ORACLE_CASHBACK_PERCENTAGE=1

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
# Examples: smtp.gmail.com, smtp.sendgrid.net, email-smtp.us-east-1.amazonaws.com
SMTP_HOST=smtp.seu-provedor.com
SMTP_PORT=587
SMTP_USER=seu_usuario_smtp
SMTP_PASS=sua_senha_smtp
SMTP_FROM=noreply@seu-dominio.com.br

# =============================================================================
# OPENAI (AI Agents)
# =============================================================================
# Get at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-sua_api_key_da_openai

# =============================================================================
# WHATSAPP (Baileys)
# =============================================================================
WHATSAPP_SESSION_PATH=./whatsapp-sessions

# =============================================================================
# UPLOADS
# =============================================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# IPFS / STORAGE (for NFT metadata)
# =============================================================================

# Pinata (IPFS pinning service) - https://pinata.cloud/
VITE_PINATA_API_KEY=your_pinata_api_key
VITE_PINATA_SECRET_API_KEY=your_pinata_secret_key

# Alternative: NFT.Storage - https://nft.storage/
VITE_NFT_STORAGE_API_KEY=your_nft_storage_api_key

# =============================================================================
# EXTERNAL SERVICES (Production Only)
# =============================================================================

# Brazilian Credit Bureau Integration (Serasa, SPC)
VITE_SERASA_API_KEY=your_serasa_api_key
VITE_SPC_API_KEY=your_spc_api_key

# KYC/Identity Verification (Serpro - Brazilian Government)
VITE_SERPRO_CONSUMER_KEY=your_serpro_consumer_key
VITE_SERPRO_CONSUMER_SECRET=your_serpro_consumer_secret

# Payment Gateway Legacy (for PIX, Boleto, Cards)
VITE_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
VITE_PAGSEGURO_TOKEN=your_pagseguro_token

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# App Environment
VITE_APP_ENV=development

# Base URL (for production deployments)
VITE_APP_BASE_URL=https://vinculo.io

# Backend API URL - OBRIGATÓRIO em produção
# Em desenvolvimento: http://localhost:3000
# Em produção: URL do seu backend no Railway (ex: https://seu-app.railway.app)
VITE_API_URL=http://localhost:3000

# Domain (for SSL and Nginx)
DOMAIN=seu-dominio.com.br
SSL_EMAIL=admin@seu-dominio.com.br

# Enable demo/mock mode (true = uses mock data, false = real blockchain)
VITE_DEMO_MODE=true

# Debug logging
VITE_DEBUG_WEB3=false

# =============================================================================
# SETUP STATUS
# =============================================================================
# Will be set to true after setup wizard completes
SETUP_COMPLETE=false
NEEDS_DATA_SCHEMA=true
